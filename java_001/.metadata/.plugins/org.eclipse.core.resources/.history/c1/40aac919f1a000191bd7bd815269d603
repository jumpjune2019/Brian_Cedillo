import java.util.*;

public class KeepingStats {
	
	public static void main(String[] args) {
  	
	int heads = 1;
  	int tails = 2;
  	int toss = (int)Math.floor((Math.random() * ((tails - heads) + 1)) + heads);
  	//make tally an array
  	//int tally = 0;
  	
  	int[] tally = {0, 0};
  	
  	for(int x = 0; x < 10; x++) {
  		
  		if(toss == heads){
  			System.out.println(tally[x]);
  			tally[x] += 1;
  			System.out.println(tally[x]);
      }
  	else if (toss == tails){
  		//tally[x] += 1;
      }
  	}
  	//testing output
  	
  	System.out.println(toss);
  }
}