		int group20 = 0;
		int group21 = 0;
		
		for(int z = 0; z < 1000; z++) {
			diceArray[0] = (int)Math.floor((Math.random() * ((max - min) + 1)) + min);
			diceArray[1] = (int)Math.floor((Math.random() * ((max - min) + 1)) + min);
			if (diceArray[0] == 1 && diceArray[1] == 1) {
				group1 += 1;
			}
		}
		
		System.out.println("You have rolled the following: ");
		System.out.println("First Die: " + x);
		System.out.println("Second Die: " + y);
		System.out.println("Play Again? (Y or y) and Enter, any other key and Enter to Quit");
			
		
		
		//if(sort = groupA){add the num of occurrences}
		//else if (sort== groupB){}...
		
		
