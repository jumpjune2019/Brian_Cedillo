	public static int SeatPrice(int [][] array, int value)
    {
        int index = 0;
        int element = -1;
        boolean found = false;

        outerloop:
        for (row = 0; row < array.length; row++)
        {
          for (col = 0; col < array[row].length; col++)
          {
            if (array[row][col] == value)
            {
              found = true;
              element = array[row][col];
              array[row][col] = 0;
              break outerloop;
            }
          }
        }
        index++;
        return element;
    }
    
    public static int Location(int [][] array, int rowchoice, int colchoice)
    {
        int index = 0;
        int element = -1; 
        boolean found = false; 

        outerloop:
        for (row = 0; row < array.length; row++)
        {
          for (col = 0; col < array[row].length; col++)
          {
            if (row == rowchoice && col == colchoice)
            {
              found = true;
              element = array[row][col];
              array[row][col] = 0;
              break outerloop;
            }
          }
        }
        index++;
        return element;
    }
}