public class GameofDice {
	
	public static void main(String[] args) {
        boolean play = true;
        
            String Dice[][] = new String[6][6];
            Dice[0][0] = "Snake Eyes";
            Dice[0][1] = "Australian yo";
            Dice[0][2] = " Little Joe From Kokomo";
            Dice[0][3] = "No field five";
